{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ESNext"
        ],
        "downlevelIteration": true,
        "importHelpers": true,
        "strict": true,
        "pretty": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "types": [
            "@types/node"
        ],
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
