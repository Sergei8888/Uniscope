{
    "name": "@uniscope/backend",
    "version": "0.0.1",
    "author": "Sergei Kuzmenkov, Vlad Uhvatov",
    "private": true,
    "files": [
        "src",
        "tsconfig.build.json",
        "tsconfig.json",
        "package.json",
        "keys",
        "nest-cli.json"
    ],
    "scripts": {
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 10",
        "test": "jest",
        "generate-docs": "asyncapi generate fromTemplate src/docs/asyncapi/asyncapi.yaml @asyncapi/html-template -o=./src/docs/asyncapi/dist --force-write",
        "build": "pnpm run generate-docs && nest build",
        "build:independent-package": "pnpm deploy --prod --filter=backend backend-deploy && cd ./backend-deploy && pnpm run build",
        "build:dev-image": "pnpm run load-env:local -- pnpm run _build:dev-image",
        "_build:dev-image": "docker build --build-arg DOCKER_REGISTRY=$DOCKER_REGISTRY . -t=uniscope-backend:latest",
        "start": "pnpm run load-env:dev -- nest start",
        "dev": "pnpm run generate-docs && pnpm run start:debug",
        "dev:background:start": "pnpm run generate-docs && pnpm run start:dev",
        "dev:background:stop": "pnpm run stop:dev",
        "start:dev": "pnpm run load-env:dev -- nest start --watch",
        "start:debug": "pnpm run load-env:dev -- nest start --debug --watch",
        "load-env:dev": "dotenv -e ../../.env.dev",
        "load-env:local": "dotenv -e ../../.env.local-prod"
    },
    "dependencies": {
        "@asyncapi/cli": "^0.51.0",
        "@asyncapi/html-template": "^0.28.3",
        "@dicebear/avatars": "^4.10.8",
        "@dicebear/avatars-initials-sprites": "^4.10.8",
        "@nanogiants/nestjs-swagger-api-exception-decorator": "^1.6.5",
        "@nestjs-modules/mailer": "^1.9.1",
        "@nestjs/common": "^10.1.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.1.0",
        "@nestjs/jwt": "^10.1.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^10.1.0",
        "@nestjs/platform-socket.io": "^10.1.0",
        "@nestjs/serve-static": "^4.0.0",
        "@nestjs/swagger": "^7.1.2",
        "@nestjs/terminus": "^10.0.1",
        "@nestjs/typeorm": "^10.0.0",
        "@nestjs/websockets": "^10.1.0",
        "@uniscope/shared": "workspace:*",
        "@willsoto/nestjs-prometheus": "^5.2.1",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "dotenv": "^16.3.1",
        "handlebars": "^4.7.7",
        "helmet": "^7.0.0",
        "joi": "^17.9.2",
        "jsonwebtoken": "^9.0.1",
        "nest-winston": "^1.9.3",
        "nestjs-cls": "^3.5.0",
        "nodemailer": "^6.9.4",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.11.1",
        "prom-client": "^14.2.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "socket.io": "^4.7.1",
        "socket.io-client": "^4.7.1",
        "typeorm": "^0.3.17",
        "uuid": "^9.0.0",
        "winston": "^3.10.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.1.10",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.17",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.4.3",
        "@types/passport-jwt": "^3.0.9",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/parser": "^6.1.0",
        "eslint": "^8.45.0",
        "eslint-config-uniscope": "workspace:*",
        "jest": "^29.6.1",
        "prettier": "^3.0.0",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "typescript": "^5.1.6"
    },
    "peerDependenciesMeta": {
        "dotenv-cli": {
            "optional": true
        }
    }
}
